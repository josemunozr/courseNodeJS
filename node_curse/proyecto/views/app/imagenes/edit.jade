extends ../../layout.jade
block contenido
  div(class="col-md-6 remove-float center-block big-top-space")
    h1 Editar Imagen
    form(action="/app/imagenes/#{imagen.id}?_method" method="POST")
      div(class="form-group")
        label(for="title") Titulo
        input(type="text" class="form-control" name="title" placeholder="Titulo de la imagen..." id="title" value="#{imagen.title}")
      div(class="row top-space")
        div(class="col-cs-12 col-sm-6")
          input(type="submit" value="Guardar" class="btn btn-info")
